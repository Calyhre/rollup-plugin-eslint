{
  "name": "rollup-plugin-eslint",
  "version": "1.0.1",
  "description": "Verify entry point and all imported files with ESLint",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c -f cjs -o dist/index.js",
    "lint": "eslint src test/eslint.js",
    "pretest": "npm run lint && npm run build",
    "test": "ava",
    "prepublish": "npm test"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TrySound/rollup-plugin-eslint.git"
  },
  "keywords": [
    "rollup",
    "rollup-plugin",
    "es2015",
    "eslint",
    "lint"
  ],
  "author": "Bogdan Chadkin <trysound@yandex.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TrySound/rollup-plugin-eslint/issues"
  },
  "homepage": "https://github.com/TrySound/rollup-plugin-eslint#readme",
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "eslint-config-postcss": "^1.0.0",
    "rollup": "^0.25.1",
    "rollup-plugin-babel": "^2.3.9",
    "rollup-plugin-npm": "^1.3.0"
  },
  "dependencies": {
    "eslint": "^1.10.3",
    "rollup-pluginutils": "^1.3.1"
  }
}
